<?xml version="1.0" encoding="UTF-8"?> 
<Configuration> 
    <Appenders>     
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d %5p [%C] %m%n"/>
        </Console>
    </Appenders>    
    <Loggers>
        <Root level="info" additivity="true">
            <AppenderRef ref="console"/>
        </Root>
    </Loggers> 
</Configuration>